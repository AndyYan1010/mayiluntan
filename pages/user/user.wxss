page{
  background: #f2f3f4;
  font-size:30rpx;
}
.top{
  width: 100%;
  background: #fff;
  padding-bottom: 30rpx;
}
.top image{
  width: 100%;
  height: 33.8vw;
}
.top .avatar{
  position: absolute;
  top: 9.3vw;
  left: 0;
  width: 100%;
}
.top .avatar view{
  width: 164rpx;
  height: 164rpx;
  border-radius: 82rpx;
  background: #fff;
  margin: 0 auto;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center
}
.top .avatar image{
  width: 152rpx;
  height: 152rpx;
  border-radius: 76rpx;
}
.top .nickname{
  text-align: center;
  padding: 10rpx 0;
}
.top .cate{
  display: flex;
}
.top .cate .cate-all{
  width: 33%;
  text-align: center;
}
.top .cate .cate-num{
  color: #f1a840;
}
.top .cate .cate-name{
  color: #7f7f7f;
}
.top .cate .cate-border{
  border-left: 1px solid #f0f2f2;
  border-right: 1px solid #f0f2f2;
}

/**list**/
.list{
  margin-top: 20rpx;
  width: 95%;
  background: #fff;
  padding-left:5%;
}
.list .list-detail{
  display: flex;
  height: 100rpx;
  flex-wrap: wrap;
  align-items: center;
  border-bottom: 1px solid #e0e0e0;
}
.list image{
  width: 30rpx;
  height: 30rpx;
}
.list .list-detail view{
  flex: 1;
}