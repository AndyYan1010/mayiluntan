    <swiper-item>
      <view class='cate'>
        <view class='cate-detail'>
        <image src='/images/icon_logo_chuzu.png' />
        <view>房屋出租</view>
        </view>
        <view class='cate-detail'>
        <image src='/images/icon_logo_qiuzu.png' />
