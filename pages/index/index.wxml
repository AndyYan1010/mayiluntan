<view class="container">
  <view class="top">
    <image src='/images/top.png'/>
    <view class='title-top'>
      <view class='weather'>4℃~12℃</view>
      <view class='exrate'>汇率：3.14</view>
    </view>
    <view class='city'>
      <view class='logo'>
      <image src='/images/ants.png'/>
      </view>
      <view>堪培拉</view>
      <view class='arrow'>
      <image src='/images/icon_area_arrow.png'/>
      </view>
    </view>
    <view class='search'>
      <input type='text' />
      <!-- <view class='search_tip'>
        <image src='/images/icon_search.png'/>
        <view>搜索</view>
      </view> -->
    </view>
  </view>
  <view class="broadcast">
    <view class='l'>
      <image src='/images/horn.png'/>
      <view>求助：车胎破了谁来修?</view>
