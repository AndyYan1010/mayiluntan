      </view>
      <view class='cate'>
        <view class='cate-detail'>
        <image src='/images/icon_logo_ask_help.png' />
        <view>求助问事</view>
        </view>
        <view class='cate-detail'>
        <image src='/images/icon_logo_share_car.png' />
        <view>拼车信息</view>
        </view>
        <view class='cate-detail'>
        <image src='/images/icon_logo_minsu.png' />
        <view>短租民宿</view>
        </view>
        <view class='cate-detail'>
