        <view class='cate-detail'>
        <image src='/images/icon_logo_buy_car.png' />
        <view>汽车交易</view>
        </view>
      </view>
      <view class='cate'>
        <view class='cate-detail'>
        <image src='/images/icon_logo_chuzu.png' />
