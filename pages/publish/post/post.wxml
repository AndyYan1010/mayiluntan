<!--pages/publish/post/post.wxml-->
<view class='main'>
  <view class='content'>
    <view class='cate'>
     <picker mode="multiSelector" bindchange="cateChange" bindcolumnchange="columnChange" value="{{indexArray}}" range="{{cateArray}}">
      <view>
       <text>发布分类：{{cateArray[0][indexArray[0]]}},{{cateArray[1][indexArray[1]]}}</text>
      </view>
     </picker>
    </view>
    <textarea bindinput='contentInput' placeholder='请输入想要发布的内容' placeholder-style='color:#afafaf;' maxlength='-1'></textarea>
    <view class='pic'>
      <image wx:for="{{pics}}" wx:key='index' src="{{item}}"></image>
      <image wx:if="{{pics.length<3}}" src="/images/post/add.png"  bindtap='addPic'></image>
    </view>
  </view>
  <view class='detail'>
    <view class='detail-list' bindtap='chooseLocation'><image src='/images/post/local.png'></image><input placeholder="江苏省无锡市" disabled='true' value='{{postData.address}}'></input><image class='more' src='/images/post/more.png'></image></view>
  </view>
  <view class='detail'>
    <view class='detail-list'><image src='/images/post/tel.png'></image><input placeholder="请输入您的电话号码"  bindinput='mobileInput'></input></view>
  </view>
  <view class='detail' wx:if='{{indexArray[0]!=4}}'>
    <view class='detail-list detail-money'>
    <image src='/images/post/price.png'></image>
    <text class='detail-sign'>{{moneySign}}</text>
    <input placeholder="不填为⾯议" bindinput='priceInput'>
    </input>
    </view>
  </view>
  <view class='detail' wx:if='{{indexArray[0]>0}}'>
    <view class='detail-list'><image src='/images/post/tag.png'></image><input placeholder="标签1"bindinput='tag1Input'></input></view>
  </view>
  <view class='detail' wx:if='{{indexArray[0]>0}}'>
    <view class='detail-list'><image src='/images/post/tag.png'></image><input placeholder="标签2" bindinput='tag2Input'></input></view>
  </view>
  <view class='detail' wx:if='{{indexArray[0]==0}}'>
    <view class='tags'>
      <view>
        <label class="{{(tagIndex1==0 || tagIndex2==0)?'on':''}}" bindtap='selectTag' data-index='0'>近火车站</label>
        <label class="{{(tagIndex1==1 || tagIndex2==1)?'on':''}}" bindtap='selectTag' data-index='1'>近电车站</label>
        <label class="{{(tagIndex1==2 || tagIndex2==2)?'on':''}}" bindtap='selectTag' data-index='2'>近公车站</label>
        <label class="{{(tagIndex1==3 || tagIndex2==3)?'on':''}}" bindtap='selectTag' data-index='3'>近超市</label>
      </view>
      <view>
        <label class="{{(tagIndex1==4 || tagIndex2==4)?'on':''}}" bindtap='selectTag' data-index='4'>近学校</label>
        <label class="{{(tagIndex1==5 || tagIndex2==5)?'on':''}}" bindtap='selectTag' data-index='5'>带车位</label>
        <label class="{{(tagIndex1==6 || tagIndex2==6)?'on':''}}" bindtap='selectTag' data-index='6'>包家具</label>
        <label class="{{(tagIndex1==7 || tagIndex2==7)?'on':''}}" bindtap='selectTag' data-index='7'>包水电</label>
        <label class="{{(tagIndex1==8 || tagIndex2==8)?'on':''}}" bindtap='selectTag' data-index='8'>可议价</label>
      </view>
      <view>
        <label class="{{(tagIndex1==9 || tagIndex2==9)?'on':''}}" bindtap='selectTag' data-index='9'>主卧</label>
        <label class="{{(tagIndex1==10 || tagIndex2==10)?'on':''}}" bindtap='selectTag' data-index='10'>房子新</label>
        <label class="{{(tagIndex1==11 || tagIndex2==11)?'on':''}}" bindtap='selectTag' data-index='11'>房间大</label>
        <label class="{{(tagIndex1==12 || tagIndex2==12)?'on':''}}" bindtap='selectTag' data-index='12'>房间大</label>
        <label class="{{(tagIndex1==13 || tagIndex2==13)?'on':''}}" bindtap='selectTag' data-index='13'>富人区</label>
        </view>
        <view>
        <label class="{{(tagIndex1==14 || tagIndex2==14)?'on':''}}" bindtap='selectTag' data-index='14'>限女生</label>
        <label class="{{(tagIndex1==15 || tagIndex2==15)?'on':''}}" bindtap='selectTag' data-index='15'>限男生</label>
        <label class="{{(tagIndex1==16 || tagIndex2==16)?'on':''}}" bindtap='selectTag' data-index='16'>可养宠物</label>
        <label class="{{(tagIndex1==17 || tagIndex2==17)?'on':''}}" bindtap='selectTag' data-index='17'>风水好</label>
      </view>
      <view>
        <label class="{{(tagIndex1==18 || tagIndex2==18)?'on':''}}" bindtap='selectTag' data-index='18'>高层公寓</label>
        <label class="{{(tagIndex1==19 || tagIndex2==19)?'on':''}}" bindtap='selectTag' data-index='19'>环境优</label>
        <label class="{{(tagIndex1==20 || tagIndex2==20)?'on':''}}" bindtap='selectTag' data-index='20'>网速好</label>
      </view>
    </view>
  </view>
  <view class='detail'>
    <view class='detail-list'><image src='/images/wechat2.png'></image><input placeholder="微信号" bindinput='wechatInput'></input></view>
  </view>
  <view class='detail'>
    <view class='detail-list'><input placeholder="请选择区域" disabled='true'bindtap='selectArea' value='{{postData.area}}'></input></view>
  </view>
  <view class='division'></view>
  <view class='top-list to-top'>
    <text>我要置顶</text>
    <view class="switch {{postData.top==1?'':' off'}}" bindtap='clickSwitch' data-on='{{postData.top}}'><view></view></view>
  </view>
  <view class='top-list' wx:if='{{postData.top==1}}'>
    <text>选择置顶时间</text>
    <picker  class='day' bindchange="dayChange" value="{{dayIndex}}" range="{{dayArray}}">
      <text>{{dayArray[dayIndex]}}</text>
    </picker>
    <image src='/images/post/more.png'></image>
  </view>
  <view class='top-list' wx:if='{{postData.top==1}}'>
    <text>价格</text>
    <text  class='price'>¥{{postData.topPrice}}</text>
  </view>
  <view class='button' bindtap='postClick'>
    <view>立即发布</view>
  </view>
</view>
