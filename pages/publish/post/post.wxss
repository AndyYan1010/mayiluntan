/* pages/publish/post/post.wxss */
page {
  background-color: #fff;
  font-size: 30rpx;
}
.content {
  margin: 0 5vw;
  padding: 50rpx 0;
  position: relative;
}
.content textarea {
  width: 100%;
  height: 300rpx;
  overflow: auto;
}
.pic{
  border:1px dashed #b3b3b6;
  width: 200rpx;
  height: 200rpx;
}
.pic image{
  width: 200rpx;
  height: 200rpx;
}
.detail{
  width: 100%;
}
.detail .detail-list{
  width: 95vw;
  height: 30rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #efefef;
  padding:30rpx 0;
  margin-left: 5vw;
}
.detail .detail-list image{
  width: 35rpx;
  height: 35rpx;
  margin-right: 20rpx;
}
.detail .detail-list input{
  flex: 1;
}
.detail .detail-list .more{
  width: 20rpx;
  height: 35rpx;
}