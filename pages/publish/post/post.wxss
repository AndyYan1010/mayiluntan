/* pages/publish/post/post.wxss */
page {
  background-color: #fff;
}

.container {
  overflow: hidden;
}
.content {
  margin: 0 5vw;
  padding-top: 50rpx;
  padding-bottom: 80rpx;
  position: relative;
}
.content textarea {
  width: 100%;
  height: 300rpx;
  overflow: auto;
}
.content .tip {
  text-align: right;
  position: absolute;
  bottom: 20rpx;
  right: 0;
  font-size: 26rpx;
}

.wrap {
  margin-top: 40rpx;
  padding: 0 5vw;
  display: flex;
  flex-wrap: wrap;
  overflow: visible;
}

.wrap .cell {
  width: 28vw;
  height: 28vw;
  margin-bottom: 2vw;
  margin-right: 2vw;
  position: relative;
  overflow: visible;
}
.wrap .cell .image {
  width: 100%;
  height: 100%;
}
.wrap .cell .delete {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 42rpx;
  height: 42rpx;
  z-index: 100;
}
.video {
  position: absolute;
  top: 0;
  left: 1000rpx;
  width: 0;
  height: 0;
}
.wrap .cell text {
  width: 100%;
  position: absolute;
  left: 0;
  bottom: 5rpx;
  text-align: center;
  color: #9e9e9e;
}

.wrap .image .cover-back {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, .4);
  display: flex;
  justify-content: center;
  align-items: center;
}
.wrap .image .cover-back .cover {
  width: 30px;
  height: 30px;
}

.submit {
  margin: 50rpx 5vw;
  height: 100rpx;
}