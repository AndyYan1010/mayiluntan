/* pages/publish/dynamic/dynamic.wxss */
page {
  background-color: #fff;
  font-size: 30rpx;
}
.content {
  margin: 0 5vw;
  padding-bottom: 50rpx;
  position: relative;
}
.content textarea {
  width: 100%;
  height: 300rpx;
  overflow: auto;
}
.cate{
  padding: 20rpx 0;
}
.pic{
  display: flex;
  height: 200rpx;
}
.pic image{
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
}
.location{
  margin-top: 20rpx;
  padding: 10rpx 20rpx;
  background: #efefef;
  display: inline-block;
  border-radius: 40rpx;
}
.location image{
  width: 19rpx;
  height: 25rpx;
  margin-right: 10rpx;
}
.button{
  width: 100%;
  height: 100rpx;
  padding-top:100rpx;
}
.button view{
  width: 90vw;
  margin: 0 auto;
  text-align: center;
  background: #f0a232;
  height: 80rpx;
  line-height: 80rpx;
  color: #fff;
  border-radius: 10rpx;
}