<!--circle.wxml-->
<view class='container'>
  <view class='search'>
      <input type='text' />
  </view>
  <view class='pics'>
    <image src='/images/c1.png'></image>
  </view>
  <view class='main'>
    <view class='title'>
      <view class='title-w'></view>
      <view class='title-name'>热门话题</view>
      <view class='title-more'><image src='/images/more.png'></image></view>
    </view>
    <view class='topic'>
      <view class='topic1'><image src='/images/c2.png'></image></view>
      <view class='topic2'>
        <view class='topic3'><image src='/images/c3.png'></image></view>
        <view><image src='/images/c4.png'></image></view>
      </view>
    </view>
    <view class='circle'>
      <view class='circle-title'>
        <view class="{{menuSelected == 0?'selected-title':''}}" data-menutype='0' bindtap='menuClicked'>最新动态</view>
        <view class="{{menuSelected == 1?'selected-title':''}}" data-menutype='1' bindtap='menuClicked'>今日热点</view>
      </view>
    </view>
  </view>
</view>