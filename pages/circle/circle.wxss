page{
  background: #f2f3f4;
  width: 100%;
}
.search{
  width: 90%;
  background: #fff;
  margin: 20rpx 0;
  border-radius: 10rpx;
  height: 2em;
}
.pics{
  width: 100%;
  height: 50vw;
}
.pics image{
  width: 100%;
  height: 50vw;
}
.main{
  width: 100%;
  background: #fff;
  margin-top: 20rpx;
}
.title{
  display: flex;
  align-items: center;
  margin: 3vw 0 3vw 3vw;
}
.title .title-w{
  width: 10rpx;
  height: 30rpx;
  background: #f0a232;
  margin-right: 10rpx;
}
.title .title-name{
  flex: 1;
}
.title .title-more{
  width:50rpx;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}
.title .title-more image{
  width: 17rpx;
  height: 30rpx;
}
.topic{
  display: flex;
}
.topic .topic1 image{
  width: 37vw;
  height: 37vw;
  margin: 0 3vw;
}
.topic .topic2 image{
  width: 54vw;
  height: 17vw;
}
.topic .topic3{
  margin-bottom: 2vw;
}
.circle{
  margin-top:20rpx;
  word-break:break-all;
}
.circle-title{
  display: flex;
  border-bottom: 1px solid #efefef;
}
.circle-title view{
  width: 50%;
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
}
.circle-title .selected-title{
  color: #f0a232;
  border-bottom: 2px solid #f0a232;
}

.circle .circle-list{
  display: flex;
  margin: 3vw 0 0 3vw;
  border-bottom: 1px solid #efefef;
  padding-bottom: 3vw;
}
.circle .circle-head{
  width: 15vw;
}
.circle .circle-head image{
  width: 12vw;
  height: 12vw;
}
.circle .circle-nick{
  display: flex;
  align-items: center;
  height: 50rpx;
}
.circle .circle-nick image{
  width: 30rpx;
  height: 30rpx;
  margin-left: 20rpx;
}
.circle .circle-tags{
  color: #b4b4b4;
}
.circle .circle-tags label{
  font-size: 28rpx;
  margin-right: 20rpx;
  height: 50rpx;
  line-height: 50rpx;
}
.circle .circle-content{
  line-height: 60rpx;
}
.circle .circle-address{
  padding:10rpx 0;
  color: #999;
}
.circle .circle-address image{
  width: 19rpx;
  height: 25rpx;
  margin-right: 10rpx;
}
.circle .circle-pics image{
  width: 24vw;
  height: 24vw;
  margin-right: 3.5vw;
}
.circle .circle-pics .circle-pics-last{
  margin-right: 0;
}
.circle .circle-btn{
  display: flex;
  padding:0 3vw;
  justify-content: flex-end;
  margin: 10rpx 0 15rpx 0;
}
.circle .circle-btn view{
  width: 80rpx;
  height: 40rpx;
  border: 1rpx solid #9b9999;
  border-radius: 15rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
}
.circle .circle-btn image{
  width: 30rpx;
  height: 30rpx;
}
.circle .circle-replys{
  width: 79vw;
  background: #f6f6f6;
}

.circle .circle-replys .circle-thumbs-up{
  display: flex;
  border-bottom: 1px solid #e7e7e7;
}
.circle .circle-replys label{
  color:#6499d7;
}
.circle .circle-replys .circle-thumbs-up .circle-up{
  padding: 10rpx;
}
.circle .circle-replys .circle-thumbs-up .circle-up view{
  padding-left:10rpx;
}
.circle .circle-replys .circle-thumbs-up .circle-up text{
  padding:6rpx;
}
.circle .circle-replys .circle-thumbs-up .circle-up .num{
  padding:0 10rpx 0 20rpx;
}
.circle .circle-replys .circle-thumbs-up image{
  width: 30rpx;
  height: 30rpx;
  margin-left: 10rpx;
}
.circle .circle-reply{
  padding-left: 10rpx;
}
.circle .circle-reply view{
  line-height: 40rpx;
}
.bottom{
  width: 100%;
  height:10vw;
}
.reply{
  width: 100%;
  height: 100%;
  position:fixed;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: column;
  z-index: 10;
}
.reply .bg{
  flex: 1;
}
.reply .input{
  width: 100%;
  height:10vw;
  display: flex;
  background: #fbfbfb;
  border-bottom: 2rpx solid #ccc;
  border-top: 2rpx solid #ccc;
  align-items: center;
  font-size: 30rpx;
}
.reply .input input{
  flex: 1;
  background: #fff;
  margin:2vw 5vw;
  height:6vw;
}
.reply .input view{
  width: 100rpx;
  height: 60rpx;
  background: #f0a323;
  color: #fff;
  text-align: center;
  border-radius: 10rpx;
  line-height: 60rpx;
  margin-right: 20rpx;
}

.input{
  position:fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height:10vw;
  display: flex;
  background: #fbfbfb;
  border-bottom: 2rpx solid #ccc;
  border-top: 2rpx solid #ccc;
  align-items: center;
  font-size: 30rpx;
}
.input input{
  flex: 1;
  background: #fff;
  margin:2vw 5vw;
  height:6vw;
}
.input view{
  width: 100rpx;
  height: 60rpx;
  background: #f0a323;
  color: #fff;
  text-align: center;
  border-radius: 10rpx;
  line-height: 60rpx;
  margin-right: 20rpx;
}
